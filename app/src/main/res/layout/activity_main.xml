<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/parentActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toParentActivity"
        android:text="父Activity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/childActivity"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:onClick="toChildActivity"
        android:text="子Activity"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/parentActivity" />

</android.support.constraint.ConstraintLayout>